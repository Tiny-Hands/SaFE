<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vysh.subairoma">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ActivityTileHome" />
        <activity
            android:name=".activities.ActivityTileQuestions"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.ActivityRegister"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.ActivityMigrantList" />
        <activity android:name=".activities.ActivityOTPVerification" />
        <activity android:name=".activities.ActivityGasSection"/>
    </application>

</manifest>
