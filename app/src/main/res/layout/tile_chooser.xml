<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text="@string/country"
                    android:textSize="@dimen/tile_title_chooser"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivCountry"
                    android:layout_width="@dimen/tile_selection_size"
                    android:layout_height="@dimen/tile_selection_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_country" />

                <TextView
                    android:id="@+id/tvCountryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:text="Malayasia" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/medium_margin"
                            android:text="@string/preparation"
                            android:textSize="@dimen/tile_title_chooser"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/tiletype1"
                            android:layout_width="@dimen/tile_selection_size"
                            android:layout_height="@dimen/tile_selection_size"
                            android:src="@drawable/ic_prep" />

                        <ProgressBar
                            android:id="@+id/progressSection1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginLeft="@dimen/large_margin"
                            android:layout_marginRight="@dimen/large_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvPercentComplete1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:text="50% Complete" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnNextSections"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/large_margin"
                        android:background="@null"
                        android:src="@drawable/ic_next"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llTravel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/medium_margin"
                            android:text="@string/travel"
                            android:textSize="@dimen/tile_title_chooser"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/tiletype2"
                            android:layout_width="@dimen/tile_selection_size"
                            android:layout_height="@dimen/tile_selection_size"
                            android:src="@drawable/ic_travel_disabled" />

                        <ProgressBar
                            android:id="@+id/progressSection2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginLeft="@dimen/large_margin"
                            android:layout_marginRight="@dimen/large_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvPercentComplete2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:text="@string/section_locked" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivImpContacts"
                        android:layout_width="@dimen/tile_selection_size"
                        android:layout_height="@dimen/tile_selection_size"
                        android:src="@drawable/ic_imp_contact_tile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/important_contacts"
                        android:textSize="@dimen/tile_title_chooser" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlInfoScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f06b6b6b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/firstToolbar"
                layout="@layout/toolbar" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlInfo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <com.vysh.subairoma.utils.CustomTextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:paddingBottom="@dimen/default_margin"
                            android:paddingRight="@dimen/medium_margin"
                            android:text="1."
                            android:textColor="@color/infoTextWhite"
                            android:textSize="24sp"
                            app:fonts="gotham_light.ttf" />

                        <com.vysh.subairoma.utils.CustomTextView
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/tv1"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv1"
                            android:lineSpacingExtra="2dp"
                            android:paddingBottom="@dimen/default_margin"
                            android:text="@string/infostep1"
                            android:textColor="@color/infoTextWhite"
                            android:textSize="@dimen/info_desc_text"
                            app:fonts="gotham_bold.ttf" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/medium_margin"
                                android:layout_marginTop="@dimen/default_margin"
                                android:text="@string/j_country"
                                android:textColor="@color/infoTextWhite"
                                android:textSize="@dimen/tile_title_chooser"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/firstIvCountry"
                                android:layout_width="@dimen/tile_selection_size"
                                android:layout_height="@dimen/tile_selection_size"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_country" />

                            <TextView
                                android:id="@+id/firstTvCountryName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/medium_margin"
                                android:text="" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="@dimen/large_margin"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginRight="@dimen/default_margin"
                                android:layout_marginTop="@dimen/large_margin"
                                android:background="@color/grey" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <com.vysh.subairoma.utils.CustomTextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="136dp"
                            android:paddingRight="@dimen/medium_margin"
                            android:paddingTop="@dimen/default_margin"
                            android:text="2."
                            android:textColor="@color/infoTextWhite"
                            android:textSize="24sp"
                            android:visibility="visible"
                            app:fonts="gotham_light.ttf" />

                        <com.vysh.subairoma.utils.CustomTextView
                            android:id="@+id/tv2desc"
                            android:layout_width="126dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/tv2"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv2"
                            android:lineSpacingExtra="2dp"
                            android:paddingTop="@dimen/default_margin"
                            android:text="@string/infostep2"
                            android:textColor="@color/infoTextWhite"
                            android:textSize="@dimen/info_desc_text"
                            android:visibility="visible"
                            app:fonts="gotham_bold.ttf" />

                        <com.vysh.subairoma.utils.CustomTextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="152dp"
                            android:paddingTop="@dimen/default_margin"
                            android:text="3."
                            android:textColor="@color/infoTextWhite"
                            android:textSize="24sp"
                            android:visibility="visible"
                            app:fonts="gotham_light.ttf" />

                        <com.vysh.subairoma.utils.CustomTextView
                            android:id="@+id/tv3desc"
                            android:layout_width="126dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:lineSpacingExtra="2dp"
                            android:paddingLeft="@dimen/default_margin"
                            android:paddingTop="@dimen/default_margin"
                            android:text="@string/infostep3"
                            android:textColor="@color/infoTextWhite"
                            android:textSize="@dimen/info_desc_text"
                            android:visibility="visible"
                            app:fonts="gotham_bold.ttf" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llinfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/medium_margin"
                                    android:text="@string/preparation"
                                    android:layout_marginEnd="@dimen/default_margin"
                                    android:textColor="@color/infoTextWhite"
                                    android:textSize="@dimen/tile_title_chooser"
                                    android:textStyle="bold" />


                                <ImageView
                                    android:id="@+id/firsttiletype1"
                                    android:layout_width="@dimen/tile_selection_size"
                                    android:layout_height="@dimen/tile_selection_size"
                                    android:layout_marginEnd="@dimen/default_margin"
                                    android:src="@drawable/ic_prep" />

                                <ProgressBar
                                    android:id="@+id/firstprogressSection1"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:layout_marginLeft="@dimen/large_margin"
                                    android:layout_marginRight="@dimen/large_margin"
                                    android:layout_marginTop="@dimen/default_margin"
                                    android:layout_marginEnd="@dimen/default_margin"
                                    android:progressDrawable="@drawable/progress_drawable"
                                    android:visibility="invisible" />

                                <TextView
                                    android:id="@+id/firsttvPercentComplete1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/default_margin"
                                    android:layout_marginTop="@dimen/small_margin" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llinfo3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/medium_margin"
                                    android:text="@string/travel"
                                    android:layout_marginStart="@dimen/default_margin"
                                    android:textColor="@color/infoTextWhite"
                                    android:textSize="@dimen/tile_title_chooser"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/firsttiletype2"
                                    android:layout_width="@dimen/tile_selection_size"
                                    android:layout_height="@dimen/tile_selection_size"
                                    android:layout_marginStart="@dimen/default_margin"
                                    android:src="@drawable/ic_traveltile" />

                                <ProgressBar
                                    android:id="@+id/firstprogressSection2"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:layout_marginLeft="@dimen/large_margin"
                                    android:layout_marginRight="@dimen/large_margin"
                                    android:layout_marginStart="@dimen/default_margin"
                                    android:layout_marginTop="@dimen/default_margin"
                                    android:progressDrawable="@drawable/progress_drawable"
                                    android:visibility="invisible" />

                                <TextView
                                    android:id="@+id/firsttvPercentComplete2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/default_margin"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:text="@string/section_locked" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/large_margin"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:layout_marginTop="@dimen/large_margin"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginTop="@dimen/large_margin"
                        android:gravity="center|bottom"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/firstivImpContacts"
                            android:layout_width="@dimen/tile_selection_size"
                            android:layout_height="@dimen/tile_selection_size"
                            android:src="@drawable/ic_imp_contact_tile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:text="@string/important_contacts"
                            android:textSize="@dimen/tile_title_chooser" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/btnFirst"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@drawable/default_button_accent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="@string/next"
            android:textColor="@color/infoTextWhite" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_view_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>