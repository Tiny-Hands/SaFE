<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="@dimen/toolbar_avatar_size"
                android:layout_height="@dimen/toolbar_avatar_size"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/small_medium_margin"
                android:layout_marginTop="@dimen/small_medium_margin"
                android:src="@drawable/ic_male" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_toEndOf="@+id/ivUserAvatar"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMigrantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_medium_margin"
                    android:text="Test User"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tile_toolbar_migname"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMigNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="984999999999"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivHam"
                android:layout_width="@dimen/ham_dimen"
                android:layout_height="@dimen/ham_dimen"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/avatar_margin"
                android:src="@drawable/ic_ham_new" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/country"
        android:textStyle="bold"
        android:textSize="@dimen/tile_title_chooser" />

    <ImageView
        android:id="@+id/ivCountry"
        android:layout_width="@dimen/tile_selection_size"
        android:layout_height="@dimen/tile_selection_size"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_country" />

    <TextView
        android:id="@+id/tvCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="Malayasia" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:src="@drawable/dotted_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:text="@string/preparation"
                android:textStyle="bold"
                android:textSize="@dimen/tile_title_chooser" />


            <ImageView
                android:id="@+id/tiletype1"
                android:layout_width="@dimen/tile_selection_size"
                android:layout_height="@dimen/tile_selection_size"
                android:src="@drawable/ic_prep" />

            <TextView
                android:id="@+id/tvPercentComplete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:text="50% Complete" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnNextSections"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/large_margin"
            android:background="@null"
            android:src="@drawable/ic_next" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:text="@string/travel"
                android:textStyle="bold"
                android:textSize="@dimen/tile_title_chooser" />

            <ImageView
                android:id="@+id/tiletype2"
                android:layout_width="@dimen/tile_selection_size"
                android:layout_height="@dimen/tile_selection_size"
                android:src="@drawable/ic_travel_disabled" />

            <TextView
                android:id="@+id/tvPercentComplete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:text="@string/section_locked" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:src="@drawable/dotted_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImpContacts"
            android:layout_width="@dimen/tile_selection_size"
            android:layout_height="@dimen/tile_selection_size"
            android:src="@drawable/ic_imp_contact_tile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="@string/important_contacts"
            android:textSize="@dimen/tile_title_chooser" />
    </LinearLayout>
</LinearLayout>