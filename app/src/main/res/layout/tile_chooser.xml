<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlCountryChooser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvDestCountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_margin"
                        android:layout_marginBottom="@dimen/medium_margin"
                        android:text="@string/country"
                        android:textSize="@dimen/tile_title_chooser"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivCountry"
                        android:layout_width="@dimen/tile_selection_size"
                        android:layout_height="@dimen/tile_selection_size"
                        android:layout_below="@+id/tvDestCountLabel"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_country" />

                    <TextView
                        android:id="@+id/tvCountryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivCountry"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="Country" />
                </RelativeLayout>

                <View
                    android:id="@+id/separator1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/rlCountryChooser"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:background="@color/grey" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llMainSec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separator1"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/llFEP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@id/llTravel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/medium_margin"
                            android:text="@string/preparation"
                            android:textSize="@dimen/tile_title_chooser"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/tiletype1"
                            android:layout_width="@dimen/tile_selection_size"
                            android:layout_height="@dimen/tile_selection_size"
                            android:src="@drawable/ic_prep" />

                        <ProgressBar
                            android:id="@+id/progressSection1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginLeft="@dimen/large_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_marginRight="@dimen/large_margin"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvPercentComplete1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:text="@string/section_locked" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnNextSections"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/large_margin"
                        android:background="@null"
                        android:src="@drawable/ic_next"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/llTravel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        android:layout_toRightOf="@+id/llFEP"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/llFEP"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/medium_margin"
                            android:text="@string/travel"
                            android:textSize="@dimen/tile_title_chooser"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/tiletype2"
                            android:layout_width="@dimen/tile_selection_size"
                            android:layout_height="@dimen/tile_selection_size"
                            android:src="@drawable/ic_travel_disabled" />

                        <ProgressBar
                            android:id="@+id/progressSection2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginLeft="@dimen/large_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_marginRight="@dimen/large_margin"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvPercentComplete2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:text="@string/section_locked" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/llMainSec"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivImpContacts"
                        android:layout_width="@dimen/tile_selection_size"
                        android:layout_height="@dimen/tile_selection_size"
                        android:src="@drawable/ic_imp_contact_tile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/important_contacts"
                        android:textSize="@dimen/tile_title_chooser" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlInfoScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B26B6B6B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/firstToolbar"
                layout="@layout/toolbar" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlInfo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/tvDestCountLabelInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_marginBottom="@dimen/medium_margin"
                            android:text="@string/country"
                            android:textSize="@dimen/tile_title_chooser"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivCountryInfo"
                            android:layout_width="@dimen/tile_selection_size"
                            android:layout_height="@dimen/tile_selection_size"
                            android:layout_below="@+id/tvDestCountLabelInfo"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_country" />

                        <TextView
                            android:id="@+id/tvCountryNameInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ivCountryInfo"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:paddingRight="@dimen/medium_margin"
                            android:paddingBottom="@dimen/default_margin"
                            android:text="1."
                            android:textColor="@color/infoTextWhite"
                            android:textSize="24sp" />

                        <com.vysh.subairoma.utils.CustomTextView
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/ivCountryInfo"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv1"
                            android:lineSpacingExtra="2dp"
                            android:text="@string/infostep1"
                            android:textColor="@color/infoTextWhite"
                            android:textSize="@dimen/info_desc_text"
                            app:fonts="gotham_bold.ttf" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/separator1info"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/rlInfo1"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/large_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:layout_marginBottom="@dimen/large_margin"
                        android:background="@color/grey" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/llMainSecInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator1info"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/llinfo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_margin"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible"
                            app:layout_constraintEnd_toStartOf="@id/llinfo3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/medium_margin"
                                android:text="@string/preparation"
                                android:textSize="@dimen/tile_title_chooser"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="@dimen/tile_selection_size"
                                android:layout_height="@dimen/tile_selection_size"
                                android:src="@drawable/ic_prep" />

                            <ProgressBar
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_marginLeft="@dimen/large_margin"
                                android:layout_marginTop="@dimen/default_margin"
                                android:layout_marginRight="@dimen/large_margin"
                                android:progressDrawable="@drawable/progress_drawable"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:text="@string/section_locked"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2."
                            android:textColor="@color/infoTextWhite"
                            android:textSize="24sp"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="@id/llinfo2"
                            app:layout_constraintLeft_toRightOf="@id/llinfo2"
                            app:layout_constraintTop_toTopOf="@id/llinfo2" />

                        <TextView
                            android:id="@+id/tv2desc"
                            android:layout_width="126dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:elevation="2dp"
                            android:lineSpacingExtra="2dp"
                            android:text="@string/infostep2"
                            android:textColor="@color/infoTextWhite"
                            android:textSize="@dimen/info_desc_text"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="@id/tv2"
                            app:layout_constraintLeft_toRightOf="@id/tv2"
                            app:layout_constraintTop_toTopOf="@id/tv2" />

                        <ImageButton
                            android:id="@+id/btnNextSectionsInfo"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/large_margin"
                            android:background="@null"
                            android:src="@drawable/ic_next"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/llinfo3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_toRightOf="@+id/llinfo2"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/llinfo2"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/medium_margin"
                                android:text="@string/travel"
                                android:textSize="@dimen/tile_title_chooser"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/tiletype2info"
                                android:layout_width="@dimen/tile_selection_size"
                                android:layout_height="@dimen/tile_selection_size"
                                android:src="@drawable/ic_traveltile" />

                            <ProgressBar
                                android:id="@+id/progressSection2info"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_marginLeft="@dimen/large_margin"
                                android:layout_marginTop="@dimen/default_margin"
                                android:layout_marginRight="@dimen/large_margin"
                                android:progressDrawable="@drawable/progress_drawable"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tvPercentComplete2info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:text="@string/section_locked"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="3."
                            android:textColor="@color/infoTextWhite"
                            android:textSize="24sp"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="@id/tv3desc"
                            app:layout_constraintRight_toLeftOf="@id/tv3desc"
                            app:layout_constraintTop_toTopOf="@id/tv3desc" />

                        <TextView
                            android:id="@+id/tv3desc"
                            android:layout_width="126dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:lineSpacingExtra="2dp"
                            android:paddingLeft="@dimen/small_margin"
                            android:text="@string/infostep3"
                            android:textColor="@color/infoTextWhite"
                            android:textSize="@dimen/info_desc_text"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="@id/llinfo3"
                            app:layout_constraintRight_toLeftOf="@id/llinfo3"
                            app:layout_constraintTop_toTopOf="@id/llinfo3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/divider2info"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/llMainSecInfo"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/large_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:layout_marginBottom="@dimen/large_margin"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider2info"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/large_margin"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:gravity="center|bottom"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:id="@+id/firstivImpContacts"
                            android:layout_width="@dimen/tile_selection_size"
                            android:layout_height="@dimen/tile_selection_size"
                            android:src="@drawable/ic_imp_contact_tile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:text="@string/important_contacts"
                            android:textSize="@dimen/tile_title_chooser" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/btnFirst"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@drawable/default_button_accent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="@string/next"
            android:textColor="@color/infoTextWhite" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_view_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>