<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/small_margin"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/medium_margin">

        <com.vysh.subairoma.utils.CustomTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:text="Title"
            android:textSize="20sp"
            app:fonts="gotham_medium.ttf" />

        <com.wordpress.priyankvex.smarttextview.SmartTextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:text="Some long description"
            android:textSize="16sp" />

        <com.wordpress.priyankvex.smarttextview.SmartTextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:text="Address:fjlkljklj"
            android:textSize="16sp" />

        <com.wordpress.priyankvex.smarttextview.SmartTextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:text="Phone: 12345456"
            android:textSize="16sp" />

        <com.wordpress.priyankvex.smarttextview.SmartTextView
            android:id="@+id/tvWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:text="Website: www.www.www"
            android:textSize="16sp" />

        <com.wordpress.priyankvex.smarttextview.SmartTextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: www@www.www"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>