<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/error_dialog_title_bg"
        android:background="@color/colorError"
        android:gravity="center"
        android:text="@string/error"
        android:textColor="#fff"
        android:textSize="@dimen/error_dialog_title_text_size" />

    <TextView
        android:id="@+id/tvErrorDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_feedback_bg"
        android:padding="@dimen/medium_large_margin"
        android:textColor="@color/colorError" />

    <Button
        android:id="@+id/btnUnderstood"
        android:layout_width="match_parent"
        android:layout_height="@dimen/error_dialog_title_bg"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/understand"
        android:textColor="@color/grey" />
</LinearLayout>