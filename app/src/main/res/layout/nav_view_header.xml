<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="212dp"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/medium_margin">

    <ImageView
        android:id="@+id/ivUserAva"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:src="@drawable/ic_male" />

    <com.vysh.subairoma.utils.CustomTextView
        android:id="@+id/tvMName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:text="Some Migrant"
        android:textColor="@android:color/white"
        app:fonts="gotham_light.ttf" />

    <com.vysh.subairoma.utils.CustomTextView
        android:id="@+id/tvMPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:text="Phone Number"
        android:textColor="@android:color/white"
        app:fonts="gotham_bold.ttf" />

    <com.vysh.subairoma.utils.CustomTextView
        android:id="@+id/tvMCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:text="Malaysia"
        android:textColor="@android:color/white"
        app:fonts="gotham_bold.ttf" />

</LinearLayout>