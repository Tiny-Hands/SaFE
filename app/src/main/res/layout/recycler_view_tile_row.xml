<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_small_margin"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_view_tile_radius"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMarker"
            android:layout_width="@dimen/card_view_markers_dimen"
            android:layout_height="@dimen/card_view_markers_dimen"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_checkmark"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/llRedflags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="9dp"
            android:orientation="horizontal" />

        <!--<TextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="0%"
            android:textColor="@color/grey"
            android:textSize="@dimen/card_view_marker_text"
            android:textStyle="bold" />-->

        <ProgressBar
            android:id="@+id/progressPercent"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progressbarbg"
            android:secondaryProgress="100" />

        <!--<TextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/progressPercent"
            android:layout_alignEnd="@id/progressPercent"
            android:layout_alignStart="@id/progressPercent"
            android:layout_alignTop="@id/progressPercent"
            android:gravity="center"
            android:text="56"
            android:textSize="6dp" />-->

        <ImageView
            android:id="@+id/ivDone"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/small_medium_margin"
            android:src="@drawable/ic_badge"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/ivTitle"
            android:layout_width="@dimen/card_view_imageview_dimen"
            android:layout_height="@dimen/card_view_imageview_dimen"
            android:layout_below="@id/ivMarker"
            android:layout_centerInParent="true"
            android:src="@drawable/roller" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/medium_large_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/tile_text_margin"
            android:gravity="center"
            android:text="Some Tile"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:id="@+id/viewDisabled"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDisabled"
        android:visibility="gone" />
</android.support.v7.widget.CardView>